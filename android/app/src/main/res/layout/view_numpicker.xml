<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_numpicker_linearLayout_main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/view_numpicker_textview_label"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/view_numpicker_button_minus"
            android:text="-"
            android:background="@android:color/transparent"
            android:textSize="30sp"
            android:layout_width="30dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/view_numpicker_textview_value"
            android:text="0"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:textSize="32sp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/view_numpicker_button_plus"
            android:text="+"
            android:background="@android:color/transparent"
            android:textSize="30sp"
            android:layout_width="30dp"
            android:layout_height="wrap_content" />

        </LinearLayout>

</LinearLayout>